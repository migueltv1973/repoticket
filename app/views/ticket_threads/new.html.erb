<h1>New Ticket Thread</h1>


<%= form_for @ticket_thread  do |f| %>
    <div class="field">
        <%= f.label :title %><br>
        <%= f.text_field :title %>
    </div>
    <div class="field">
        <%= f.label :email %><br>
        <%= f.text_field :email %>
    </div>
    
    <div class="field">
        <%= f.label :descripcion %><br>
        <%= f.text_area :descripcion %>
    </div>
    
  
    
    <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>

<%= link_to 'Back', ticket_threads_path %>
