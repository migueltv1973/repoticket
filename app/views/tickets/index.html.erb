<p id="notice"><%= notice %></p>

<h1>Tickets</h1>

<table>
 
  <thead>
  <tr>
    <th>Title</th>
    <th>descripcion</th>
    <th>correo</th>
    <th>Acciones</th>
    <th colspan="3"></th>
  </tr>
</thead>

  <tbody>
    <% @tickets.each do |ticket| %>
    <tr>
      <td><%= ticket.title %></td>
      <td><%= ticket.descripcion %></td>
      <td><%= ticket.email %></td>
        <td><%= link_to 'Show ticket', ticket %></td>
        <td><%= link_to 'Edit ticket', edit_ticket_path(ticket) %></td>
        <td><%= link_to 'Borra ticket', ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
   

    </tbody>

</table>

<br>

<%= link_to 'New Ticket', new_ticket_path , class: "btn btn-primary" %>

