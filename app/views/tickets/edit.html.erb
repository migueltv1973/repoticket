<h1>Editing Ticket</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    
  <% estados={'Estado Abierto'=>'abierto','Estado Cerrado'=>'cerrado'}  %>
    <% lista = estados.sort %>

    <%= form_for @ticket do |f| %>

      <%= f.label :status %>
      <%= f.select :status, lista, class: 'form-control' %>
      </br>
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.text_field :email, class: 'form-control' %>

      <%= f.label :descripcion %>
      <%= f.text_area :descripcion, class: 'form-control' %>
      
      <h4>Change your image.</h4>
      <span class="picture">
        <%= f.file_field :photo, accept: 'image/jpeg,image/gif,image/png' %>
      </span>

      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>

   
  </div>
</div>


<%= link_to 'Show', @ticket %> |
<%= link_to 'Back', tickets_path %>
